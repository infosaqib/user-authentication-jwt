                        <path d="M12.5 4.89131C14.3326 4.89131 16.0159 5.54248 17.3307 6.62564C17.655 6.89282 18.1265 6.87354 18.4236 6.57642L20.7317 4.26831C21.0688 3.9312 21.0448 3.37939 20.6847 3.06699C18.4818 1.15591 15.6156 0 12.5 0C7.87794 0 3.83722 2.51743 1.68024 6.25581L5.91881 8.69888C7.23644 6.42676 9.68976 4.89131 12.5 4.89131Z" fill="#FF4B26"/>
                        <path d="M17.3307 6.62563C17.655 6.89282 18.1265 6.87354 18.4236 6.57642L20.7317 4.26831C21.0688 3.9312 21.0447 3.37939 20.6847 3.06699C18.4818 1.15586 15.6156 0 12.5 0V4.89131C14.3325 4.89131 16.0159 5.54248 17.3307 6.62563Z" fill="#D93F21"/>
                    </g>
                    <defs>
                        <clipPath id="clip0_3_40">
                            <rect width="25" height="25" fill="white"/>
                        </clipPath>
                    </defs>
                </svg>
            </a>
            <a class="sign-in-with__option" title="Sign up with Facebook">
                <!-- Facebook SVG -->
                <svg width="14" height="26" viewBox="0 0 14 26" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M9.01355 26V14.141H12.9925L13.5895 9.51803H9.01355V6.56691C9.01355 5.22886 9.38359 4.31699 11.3045 4.31699L13.7505 4.31599V0.180999C13.3275 0.126029 11.8755 0 10.1855 0C6.65654 0 4.24054 2.15406 4.24054 6.10905V9.51803H0.249512V14.141H4.24054V26H9.01355Z" fill="#3D4DA6"/>
                </svg>
            </a>
        </div>

        <div class="login">
            Already have an account?
            <a href="/auth/login">Login</a>
        </div>
    </div>

    <script src="../javascripts/script.js"></script>
</body>
</html>